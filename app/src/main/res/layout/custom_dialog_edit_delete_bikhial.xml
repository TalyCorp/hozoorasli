<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/txt_name_kelas"
        android:id="@+id/txt_name_kelas"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/overlay_dark_90"
        android:textSize="35dp"
        android:fontFamily="@font/kamran"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:id="@+id/txt_name_kelas_from_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نام کلاس :"
        android:textColor="@color/overlay_dark_90"
        android:textSize="35dp"
        android:fontFamily="@font/kamran"/>

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="حذف"
        android:textColor="@color/overlay_dark_90"
        android:textSize="20dp"
        android:fontFamily="@font/morvarid"/>

    <TextView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="ویرایش"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25sp"
        android:textColor="@color/overlay_dark_90"
        android:textSize="20dp"
        android:fontFamily="@font/morvarid"/>

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="بیخیال !"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25sp"
        android:textColor="@color/overlay_dark_90"
        android:textSize="20dp"
        android:fontFamily="@font/morvarid" />


</RelativeLayout>