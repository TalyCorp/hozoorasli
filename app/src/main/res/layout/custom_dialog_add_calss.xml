<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_afzodan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/kamran"
        android:text="@string/txt_afzdon_new_class"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/overlay_dark_90"
        android:textSize="35dp" />

     <com.google.android.material.textfield.TextInputEditText
         android:id="@+id/name_class"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/kamran"
         android:hint="@string/edit_add_new_class"
         android:textColorHint="@color/overlay_dark_90"
         android:layout_below="@id/txt_afzodan"
         android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/btn_afzodn_new_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_class"
        android:layout_marginLeft="70dp"
        android:fontFamily="@font/kamran"
        android:text="@string/btn_afzon_new_class"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/btn_cancel_new_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_class"
        android:layout_marginLeft="262dp"
        android:fontFamily="@font/kamran"
        android:text="@string/btn_laghv_new_class"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />


</RelativeLayout>